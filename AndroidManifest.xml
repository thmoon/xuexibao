            android:name="com.thmoon.xuexibao.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.thmoon.xuexibao.activity.HomeActivity"></activity>
        <activity android:name="com.thmoon.xuexibao.activity.DurationSetActivity"></activity>
        <activity android:name="com.thmoon.xuexibao.activity.ScreenActivity"
            	android:launchMode="singleTop"></activity>
        <service android:name="com.thmoon.xuexibao.service.LocationRecordService"></service>
    </application>

</manifest>
